@page "/"
@implements IDisposable

<AuthorizeView>
    <NotAuthorized>
        <PageTitle>ChatRPG</PageTitle>

        <div class="container-front">
            <h1 class="title text-readable title-front">
                @_titleDisplayText<span class="cursor" style="visibility: @(_cursorVisible ? "visible" : "hidden")">|</span>
            </h1>
            <p class="slogan-front text-readable">Immerse yourself in the ultimate AI-powered adventure!</p>
            <LoginDisplay/>
        </div>
    </NotAuthorized>
    <Authorized>
        <PageTitle>Dashboard - ChatRPG</PageTitle>
        
        <div class="container-front">
            <UserCampaignOverview/>
        </div>
    </Authorized>
</AuthorizeView>
