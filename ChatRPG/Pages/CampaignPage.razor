@page "/Campaign"
@using OpenAiGptMessage = ChatRPG.API.OpenAiGptMessage
@using OpenAI_API.Chat

<PageTitle>Campaign - @_campaign?.Title</PageTitle>

<Navbar Username="@_loggedInUsername"/>

<div class="mb-5 mt-4" style="margin-left: 30px; margin-right: 30px;">
    <div class="row gap-4">
        <div class="col game-stats floating-stats mx-auto rounded text-white">
            <div>
                <h3 class="text-center mb-4">Start Scenario</h3>
                <div class="card card-dim mb-2 text-black">
                    <div class="card-body col-12">
                        <h5 class="card-title">@_campaign?.Title</h5>
                        <hr/>
                        <p class="card-text text-start">@_campaign?.StartScenario</p>
                    </div>
                </div>
            </div>
            <div>
                <h3 class="text-center mb-4">Location</h3>
            </div>
        </div>

        <div class="col-6 conversation mx-auto rounded p-5 text-black" style="background-color: rgba(35, 35, 35, 0.8)">
            <div class="text-center campaign-title mb-5" id="campaign-title">
                <h1>@_campaign?.Title</h1>
            </div>

            <div class="conversation-text">
                @foreach (OpenAiGptMessage message in _conversation.Where(m => !m.Role.Equals(ChatMessageRole.System)))
                {
                    <OpenAiGptMessageComponent Message="@message"/>
                }
            </div>

            <div class="mt-4">
                <div class="col-1" style="margin-left: 10px;">
                    <RadzenSelectBar Size="ButtonSize.Small" @bind-Value=@_activePromptType TValue="PromptType"
                                     Change="OnPromptTypeChange" class="rz-shadow-6 prompt-selector">
                        <Items>
                            <RadzenSelectBarItem Text="Do" Value="PromptType.Do" class="rz-ripple"/>
                            <RadzenSelectBarItem Text="Say" Value="PromptType.Say" class="rz-ripple"/>
                            <RadzenSelectBarItem Text="Attack" Value="PromptType.Attack" class="rz-ripple"/>
                        </Items>
                    </RadzenSelectBar>
                </div>

                <div class="input-group mx-auto col-10 mt-2 input-group-border">
                    <input type="text" style="resize:vertical;" class="form-control user-prompt custom-text-field"
                           @bind="_userInput" placeholder="@_userInputPlaceholder" @onkeyup="@EnterKeyHandler" disabled="@_isWaitingForResponse"/>
                    <div class="input-group-append">
                        <button class="btn btn-primary ml-2" type="button" @onclick="SendPrompt" disabled="@_isWaitingForResponse">
                            Send
                        </button>
                    </div>
                </div>

                @if (_hasScrollBar)
                {
                    <button class="btn-scroll-to-top text-xl-center rounded" @onclick='() => ScrollToElement("campaign-title")'>
                        <i class="bi bi-arrow-bar-up fs-3"></i>
                    </button>
                }
            </div>
        </div>

        <div class="col player-info floating-stats mx-auto rounded text-white">
            <div>
                <h3 class="text-center mb-4">Character</h3>
            </div>
        </div>
    </div>
</div>

<span id="bottom-id" style="margin-bottom: 50px;"></span>

<footer class="footer pl-3 text-muted footer-formatting fixed-bottom custom-gray-container">
    <div class="container">
        &copy; 2023 - ChatRPG
    </div>
</footer>
